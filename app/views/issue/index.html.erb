<h1>Listing Issues</h1>

<%= link_to 'New issue', new_issue_path %>
<%= link_to 'Home', welcome_index_path %>

<table>
  <tr>
    <th>Issue name</th>
    <th></th>
  </tr>
 
  <% @issue.each do |issue| %>
    <tr>
      <td><%= issue.issue_name %></td>
      <td><%= link_to 'Show', issue_path(issue) %></td>
      <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
      <td><%= link_to 'Destroy', issue_path(issue),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
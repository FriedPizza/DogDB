<h1>Listing Characters</h1>

<%= link_to 'New character', new_character_path %>
<%= link_to 'Home', welcome_index_path %>

<table>
  <tr>
    <th>Character name</th>
    <th></th>
  </tr>
 
  <% @character.each do |character| %>
    <tr>
      <td><%= character.char_name %></td>
      <td><%= link_to 'Show', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Destroy', character_path(character),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>